<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>intellect/home</title>
    <%- include("header") -%>
  </head>
  <body>
    <%- include("navbar") -%>
    <div class="box">
      <div class="b b1"></div>
      <div class="b b2"></div>
      <div class="b b3"></div>
      <div class="b b4"></div>
      <br><br><br><br><br><br><br>
      <h4>
      <div class="container">
        <center><span id="quote" class="quote"></span></center>
      </div>
      </h4>
    </div>
    <br>
    <div class="container-fluid">
        <button type="button" name="button" class="btn btn-primary" onclick="window.changeTheme();">Dark</button><br><br>
      <div style="margin-left:5%" class="row">
        <div class="col-md-12">
          <h1>Questions: </h1>
        </div>
          <%- questions.map(q => `
            <div style="margin-top:20px" class="col-md-6">
              <blockquote>
                  <a href="/question/${q.id}">${q.question}</a>
                  <br>
                  <span class="text-muted" style="font-size:14px;">Asked by ${q.by} ${q.timeago}</span>
              </blockquote>
            </div>
          `).join('') %>
        </div>
    </div>
  <%- include("footer") %>
  </body>
</html>
